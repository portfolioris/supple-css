{
  "name": "@supple-kit/supple-css",
  "version": "5.0.0-beta.1",
  "description": "In-browser (S)CSS framework; Fluid, Variable, supple if you will",
  "main": "index.scss",
  "repository": "https://github.com/supple-kit/supple-css.git",
  "author": "Bram Smulders <hello@bram.is>",
  "license": "MIT",
  "keywords": [
    "supple",
    "supple kit",
    "css",
    "scss",
    "itcss",
    "grid",
    "framework",
    "bem"
  ],
  "scripts": {
    "test": "npm run lint && npm run build && npm run gzip",
    "lint": "stylelint \"**/*.scss\"",
    "gzip": "gzip-size _test/css/index.css",
    "postcss": "postcss _test/css/**/*.css --replace",
    "sass": "sass index.scss:_test/css/index.css _test/scss/test.scss:_test/css/test.css --no-source-map",
    "build": "npm run sass && npm run postcss",
    "serve": "browser-sync start --server --files '_test/css/*.css, ./**/*.html' --index 'test.html'",
    "watch": "nodemon -e scss -x \"npm run test\"",
    "start": "concurrently 'npm run serve' 'npm run watch'"
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "autoprefixer": "^10.1.0",
    "browser-sync": "^2.26.13",
    "concurrently": "^5.3.0",
    "cssnano": "^4.1.10",
    "glob": "^7.1.6",
    "gzip-size-cli": "^4.0.0",
    "nodemon": "^2.0.6",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "sass": "^1.30.0",
    "stylelint": "^13.8.0",
    "@supple-kit/stylelint-config-supple": "^3.0.3",
    "stylelint-scss": "^3.18.0"
  }
}
